{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tandem",
  "version": "0.1.0",
  "identifier": "ai.frumu.tandem",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tandem",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; connect-src 'self' http://127.0.0.1:* https://openrouter.ai https://api.anthropic.com https://api.openai.com; img-src 'self' data: blob: asset: https:; font-src 'self' https://fonts.gstatic.com; frame-src asset:; object-src asset:",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$APPDATA/**", "$RESOURCE/**", "**"],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY4MkREOUEzNUIyNkMzM0IKUldRN3d5WmJvOWt0K0x5QkZZNndYQ2RRUFN5YTRiTlRLK1ozMXdEcythY2laemYzSVdSWERvSXMK",
      "endpoints": ["https://github.com/frumu-ai/tandem/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
