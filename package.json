{
  "name": "tandem",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev:clean": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Get-Process | Where-Object { $_.ProcessName -in @('tandem','tandem-engine','node') } | Stop-Process -Force -ErrorAction SilentlyContinue; pnpm tauri dev\"",
    "engine:stop:windows": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Get-Process | Where-Object { $_.ProcessName -in @('tandem-engine','tandem','tandem-tui') } | Stop-Process -Force -ErrorAction SilentlyContinue\"",
    "engine:build": "cargo build -p tandem-ai",
    "engine:start": "cargo run -p tandem-ai --bin tandem-engine -- serve --host 127.0.0.1 --port 39731",
    "engine:test": "cargo test -p tandem-server -p tandem-core -p tandem-ai",
    "engine:smoke:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/engine_smoke.ps1",
    "engine:smoke:unix": "bash ./scripts/engine_smoke.sh",
    "docs:parity": "node scripts/verify-docs-parity.mjs",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "check-secrets": "node scripts/check-secrets.js",
    "download-sidecar": "node scripts/download-sidecar.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@fontsource-variable/geist-mono": "^5.2.7",
    "@fontsource/geist-sans": "^5.2.5",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-virtual": "^3.13.18",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-store": "^2",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.2",
    "i18next": "^25.8.7",
    "i18next-browser-languagedetector": "^8.2.1",
    "lucide-react": "^0.562.0",
    "react": "^19.1.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^16.5.4",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "react-window": "^2.2.6",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tauri-apps/cli": "^2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "node scripts/check-secrets.js"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.rs": [
      "rustfmt --edition 2021",
      "node scripts/check-secrets.js"
    ]
  }
}
